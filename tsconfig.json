{
  // 编译选项
  "compilerOptions": {
    "outDir": "./dist/",
    // 是否包含可以用于 debug 的 sourceMap
    "jsx": "react",
    // "jsxFactory": "h",
    "sourceMap": true,
    // 以严格模式解析
    // "strict": true,
    // 采用的模块系统
    "module": "commonjs",
    // 如何处理模块
    "moduleResolution": "node",
    // 编译输出目标 ES 版本
    "target": "es5",
    // 允许从没有设置默认导出的模块中默认导入
    "allowSyntheticDefaultImports": true,
    // 启用装饰器
    "experimentalDecorators": true,
    // 在表达式和声明上有隐含的 any 类型时报错
    "noImplicitAny": false,
    // 编译过程中打印文件名
    // "listFiles": true,
    // 移除注释
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    // 允许编译javascript文件
    "allowJs": true,
    // 编译过程中需要引入的库文件的列表
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "./src/**/*",
  ]
}
